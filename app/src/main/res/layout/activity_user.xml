<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <!--    #########################################-->
    <!--    #              음식이름 작성              -->
    <!--    #########################################-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/Dish1Mic1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/mic"
                    android:onClick="SpeechBefore1"/>

                <TextView
                    android:id="@+id/dish1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:hint="운동전"
                    android:textSize="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/linearLayout1">

                <ImageView
                    android:id="@+id/Dish1Mic2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/mic"
                    android:onClick="SpeechBefore2"/>

                <TextView
                    android:id="@+id/dish2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="운동후"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/linearLayout2">

                <ImageView
                    android:id="@+id/Dish1Mic3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/mic"
                    android:onClick="SpeechBefore3"/>

                <TextView
                    android:id="@+id/dish3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="운동 30분후"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/linearLayout3">

                <ImageView
                    android:id="@+id/Dish1Mic4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/mic"
                    android:onClick="SpeechBefore4"/>

                <TextView
                    android:id="@+id/dish4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="운동 60분후"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/ButtonZeroset"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:text="초기화"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="100dp"
                    android:background="@drawable/boxblue">

                </TextView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ButtonCal"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:text="혈당 전송"
                    android:textColor="#fff"
                    android:background="@drawable/boxblue"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20dp" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ButtonNextTTTT"
                android:layout_width="124dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:text="next"
                android:textSize="20dp"
                android:background="@drawable/boxblue"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_gravity="right"/>


            <!--    #########################################-->
            <!--    #           음식무게 가져오기         -->
            <!--    #########################################-->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>