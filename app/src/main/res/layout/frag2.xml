<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weight"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="30dp"
        android:text="저녁"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/guidline1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_weight" />

    <EditText
        android:id="@+id/text_weight"
        app:layout_constraintBottom_toBottomOf="@+id/guidline1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toRightOf="@id/weight"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/height"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="120dp"
        android:text="점심"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/weight"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/text_height"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toTopOf="@id/text_weight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/height"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/age"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="아침"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/height"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.487" />

    <EditText
        android:id="@+id/text_age"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toTopOf="@id/text_height"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@id/age"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>